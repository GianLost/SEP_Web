@using SEP_Web.Models

@model UserAdministrator

@{
    ViewData["Title"] = "Excluir administrador";
}

<!-- Partial View de Exclusão de Usuário -->
<div>

    <form asp-controller="UserAdministrator" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id">

        <div class="p-2 text-justify">
            <span>Tem certeza que deseja excluir o(a) administrador(a) <b>@Model.Name</b>? Essa ação excluirá a conta e demais entidades <b>(Órgãos, Divisões, Seções e Setores)</b> relacionadas ao usuário de forma <b class="text-danger">permanente</b> e não poderá ser desfeita. Ao prosseguir você concorda com estes termos.</span>
        </div>

        <div class="modal-footer d-flex justify-content-start p-2">
            <button type="submit" class="btn btn-sm btn-danger" name="decision" type="submit" value="delete" title="Excluir - @Model.Login"><i class="bi bi-trash"></i></button>
            <a asp-controller="UserAdministrator" asp-action="Index" class="btn btn-sm btn-secondary" title="Cancelar"><i class="bi bi-arrow-return-left" title="Cancelar"></i></a>
        </div>

    </form>

</div>
<!-- / Partial View de Exclusão de Usuário -->