@using SEP_Web.Models.StructuresModels

@{
    ViewData["Title"] = "Seções";
}

<div>
    <div class="container-fluid justify-content-start w-100 pop-up">
        <a title="Cadastrar nova seção ..." type="button" data-bs-toggle="modal" data-bs-target="#section-register"
            class="btn btn-primary d-flex justify-content-evenly btn-md">
            <i class="bi bi-building-add"></i> Novo
        </a>
        @await Html.PartialAsync("../Shared/Components/Alerts/_Alerts.cshtml")
    </div>

    @* Modal de Registro *@
    <div class="modal fade" id="section-register" tabindex="-1" role="dialog" aria-labelledby="section-registerTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header text-light bg-primary p-3">
                    <h3 class="modal-title fs-4 text-center">Adicionar seção</h3>
                    <a type="button" class="btn-close bg-light" data-bs-dismiss="modal" aria-label="Close"></a>
                </div>
                <div class="modal-body p-1">
                    @await Html.PartialAsync("_Register.cshtml", new Section())
                </div>
            </div>
        </div>
    </div>
    @* Fim do Modal de Registro *@

    <div class="card">
        <div class="card-header bg-primary text-light">
            <span class="fw-bold">@ViewData["Title"] :</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="section-table"
                    class="table table-sm table-bordered table-striped table-light table-style duo-table p-0">
                    <thead class="table-light bg-danger border-light text-primary">
                        <tr>
                            <th scope="col">Descrição</th>
                            <th scope="col">Divisão</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @* A tabela será preenchida pelo DataTables via AJAX *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="dynamic-modal"></div> @* Contêiner para injetar modais dinâmicos *@
</div>