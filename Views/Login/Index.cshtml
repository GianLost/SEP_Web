@model Login

@using SEP_Web.Models.LoginModels

@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Login";
}

<div id="login-container">

    <div class="card shadow-lg m-auto">

        <div class="card-header bg-primary text-light">
            <h2 class="my-0 text-center">@ViewData["title"]</h2>
        </div>

        <div class="card-body">

            <form id="login-form" class="py-4 px-4" asp-controller="Login" asp-action="SignIn" method="post">
                
                <div id="login-alert" class="container-fluid">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger shadow-md" role="alert">
                            <button type="button" class="btn btn-sm btn-danger close-alert" data-dismiss="modal" aria-label="Close">
                                <span class="close-span" aria-hidden="true">&times;</span>
                            </button>
                            @TempData["ErrorMessage"]
                        </div>
                        TempData.Clear();
                    }
                </div>

                <div class="input-group mt-2">
                    <span class="input-group-text bg-primary border-primary text-light"><i
                            class="bi bi-person-vcard"></i></span>
                    <label for="login-masp" hidden>MASP:</label>
                    <input type="number" class="form-control" id="login-masp" asp-for="Masp"
                        placeholder="Informe seu MASP">
                </div>
                <div class="validate-fields mb-1">
                    <span class="field-validation-error">@TempData["InvalidMASP"]</span>
                    @Html.ValidationMessageFor(x => x.Masp)
                </div>

                <div class="input-group">
                    <span class="input-group-text bg-primary border-primary text-light"><i class="bi bi-person-circle"></i></span>
                    <label for="login-name" hidden>Login:</label>
                    <input type="text" class="form-control" id="login-name" asp-for="LoginName" placeholder="Nome de usuÃ¡rio">
                </div>
                <div class="validate-fields mb-1">
                    <span class="field-validation-error">@TempData["Invalidlogin"]</span>
                    @Html.ValidationMessageFor(x => x.LoginName)
                </div>

                <div class="input-group">
                    <span class="input-group-text bg-primary text-light"><i class="bi bi-lock-fill"></i></span>
                    <label for="login-password" hidden>Senha:</label>
                    <input type="password" class="form-control" id="login-password" asp-for="Password" placeholder="Digite sua senha">
                    <a title="Exibir Senha" class="input-group-text" id="toggle-password"><i title="Exibir Senha" id="password-icon" class="bi bi-eye-slash-fill"></i></a>
                </div>
                <div class="validate-fields mb-1">
                    <span class="field-validation-error">@TempData["InvalidPass"]</span>
                    @Html.ValidationMessageFor(x => x.Password)
                </div>

                <div class="d-grid col-md-6 m-auto">
                    <button type="submit" class="btn bg-primary text-light">Entrar</button>
                </div>

            </form>

        </div>

    </div>

</div>