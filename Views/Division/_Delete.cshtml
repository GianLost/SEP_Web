@model DivisionViewModel

@using SEP_Web.Models.StructuresModels
@using SEP_Web.ViewModels

@{
    ViewData["Title"] = "Excluir Divisão";
}

<!-- Partial View de Exclusão de Divisões -->

<div>

    <form asp-controller="Division" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id">

        <div class="p-3">
            <span>Tem certeza que deseja excluir a divisão: <b>@Model.Name</b>? Essa ação irá excluí-la de forma <b class="text-danger">permanente</b>, consequentemente todas as demais entidades <b>(Seções, Setores, Avaliadores e Servidores)</b> que foram cadastradas com base nesta divisão serão excluídas. A ação não poderá ser desfeita, ao prosseguir você concorda com estes termos.</span>
        </div>

        <div class="modal-footer -flex justify-content-start p-2">
            <button type="submit" title="Excluir divisão ..." class="btn btn-danger btn-sm" name="decision" value="delete" title="Excluir divisão ..."><i title="Excluir divisão ..." class="bi bi-trash"></i></button>
            <a asp-controller="Division" asp-action="Index" class="btn btn-secondary btn-sm" title="Cancelar ..."><i class="bi bi-arrow-return-left" title="Cancelar ..."></i></a>
        </div>

    </form>

</div>

<!-- / Partial View de Exclusão de Divisões -->