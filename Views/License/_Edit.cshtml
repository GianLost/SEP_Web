@model LicenseViewModel

@using SEP_Web.ViewModels

@{
    ViewData["Title"] = "Cadastrar Licença";
}

<!-- Partial View de Cadastro de Licença -->

<div>

    <form id="edit-license-form" asp-action="Edit" asp-controller="License" method="post">

        <input type="hidden" asp-for="Id">

        <div class="form-group p-4">

            <label class="form-label" for="edit-license-name" hidden></label>
            <input type="text" placeholder="Informe um nome para a licença :" class="form-control" asp-for="Name" id="edit-license-name" autocomplete="disabled"/>
            <div class="validate-fields mb-1">
                <span class="select-validation-error"></span>
            </div>

            <label class="form-label" for="edit-license-time" hidden></label>
            <input type="number" placeholder="Informe o tempo da licença : (Em dias)" class="form-control" asp-for="Time" id="edit-license-time" autocomplete="disabled"/>
            <div class="validate-fields">
                <span class="field-validation-error"></span>
            </div>

        </div>

        <div class="d-flex justify-content-start modal-footer p-2">

            <button type="submit" class="btn btn-sm btn-primary" title="Cadastrar ..."><i class="bi bi-check-circle-fill" title="Cadastrar ..."></i></button>
            <a asp-controller="License" asp-action="Index" class="btn btn-sm btn-danger" title="Cancelar ..."><i class="bi bi-x-circle-fill" title="Cancelar ..."></i></a>

        </div>

    </form>

</div>

<!-- Partial View de Cadastro de Licença -->